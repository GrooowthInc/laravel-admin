/*******************************
         Theme Overrides
*******************************/


.ui.popup.is-short {
  right: 6px !important;
  padding: 0.5em !important;
}

.ui.bottom.right.popup.is-short:before {
  right: 1.8em !important;
}

.ui.calendar {
  position: relative;
  color: #333;
}
.ui.calendar > .input {
  position: absolute;
  top: 0;
  left: 0;
  width: 44px;
  height: 44px;
  opacity: 0;
}